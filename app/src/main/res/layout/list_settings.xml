<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsJava">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Conectar a Grupo"
                android:textColor="#000"
                android:textSize="25sp"
                app:fontFamily="sans-serif-condensed" />

            <View
                android:id="@+id/sep1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/tit1"
                android:layout_marginBottom="10dp"
                android:background="#4E4E4E" />

            <EditText
                android:id="@+id/txtnomGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sep1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Codigo del grupo" />

            <Button
                android:id="@+id/grp_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtnomGroup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Conectar" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Crear un Grupo"
                android:textColor="#000"
                android:textSize="25sp"
                app:fontFamily="sans-serif-condensed" />

            <View
                android:id="@+id/sep2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/tit2"
                android:layout_marginBottom="10dp"
                android:background="#4E4E4E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/GRP_NAME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Nombre del grupo" />

                    <EditText
                        android:id="@+id/GRP_CODE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Codigo Unico" />

                </LinearLayout>

                <Button
                    android:id="@+id/create_grp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="Crear" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Inicio y Registro de Usuario"
                android:textColor="#000"
                android:textSize="25sp"
                app:fontFamily="sans-serif-condensed" />

            <View
                android:id="@+id/sep3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/tit2"
                android:layout_marginBottom="10dp"
                android:background="#4E4E4E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Username"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:hint="Usuario" />

                <EditText
                    android:id="@+id/Passd"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:hint="Password" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Crear_Usuario"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:drawableRight="@mipmap/icon_crear"
                    android:text="Crear Usuario" />

                <Button
                    android:id="@+id/Login"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:drawableRight="@mipmap/entrar"
                    android:text="Login" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>